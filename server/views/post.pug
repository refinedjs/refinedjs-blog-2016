doctype html
html(lang="en")
	//// Start the head //
	head
		include ./_inc/head.pug
	body
		//// Start the navigation //
		include ./_inc/nav.pug
		//// Start the post //
		div 
			header.intro-header.post
				div.container-fluid
					div.row
						div.col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
							div.site-heading
								h1 #{ post.title }
								p.post-meta-details
									em
										small <a href="#{ post.author_url }">#{ post.author }</a> | #{ post.created_date }
											br
											i.fa.fa-tags 	
											each tag,idx in post.tags 
												a(href='/tags/' + tag ) #{ tag }
												if idx < post.tags.length - 1
													span , 
		div.container-fluid.post
			div.row
				div.col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
					!= post.post
		div.row
			div.col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
				div#disqus_thread
		script.		
			var disqus_config = function () {
				this.page.url = 'http://refinedjs.io/#{ post.page_url }';
				this.page.identifier = '#{ post.page_identifier }';
			};
			(function() {
			var d = document, s = d.createElement('script');
			s.src = '//refinedjs.disqus.com/embed.js';
			s.setAttribute('data-timestamp', +new Date());
				(d.head || d.body).appendChild(s);
			})();
		//// End the post //
		////Start the footer//
		include ./_inc/footer.pug
		include ./_inc/scripts.pug
